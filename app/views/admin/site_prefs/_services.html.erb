
<div class="services">
  Services<br>
  To edit a service, click on its name.
  <table>
    <tr>
      <td>Name of Service</td>
      <td></td>
    </tr>
    <% @services.each do |s| %>
      <tr>
        <td>
          <%= link_to s.name, edit_admin_services_path(s) %> 
        </td>
        <td>
                <%= link_to "Remove / Delete", [:admin, s], :confirm => "Are you sure? It'll be gone forever.", :method => :delete %>
        </td>
      </tr>
      
    <% end %>
  </table>

<%= link_to "Add Service", new_admin_service_path %>
</div>