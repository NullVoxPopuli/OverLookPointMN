<h1>Editing poll</h1>

<% form_for([:admin, @poll]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :expiration %><br />
    <%= f.date_select :expiration %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', [:admin, @poll] %> |
<%= link_to 'Back', admin_polls_path %>