<h1>Listing polls</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Expiration</th>
  </tr>

<% @polls.each do |poll| %>
  <tr>
    <td><%=h poll.name %></td>
    <td><%=h poll.expiration %></td>
    <td><%= link_to 'Show', admin_poll_path(poll) %></td>
    <td><%= link_to 'Edit', edit_admin_poll_path(poll) %></td>
    <td><%= link_to 'Destroy', admin_poll_path(poll.id), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New poll', new_admin_poll_path %>