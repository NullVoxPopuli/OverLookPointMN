<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <title><%= controller.controller_name %>: <%= controller.action_name %></title>
  <%= javascript_include_tag :defaults %>
  <%= stylesheet_link_tag "/stylesheets/admin.css"%>
  <script type="text/javascript">
    var $j = jQuery.noConflict();

    $j(document).ready(function(){
      if($j(".flash_notice")){
        $j(".flash_notice").delay(1000).fadeOut(1000);
      }
    });
  </script>
</head>
<body>
	<div class="body_container">
<h1>OverLook Point MN Administration</h1>

	       <%= yield %>


		<%= "<p class=\"flash_notice\" style=\"color: green\">" + flash[:notice] + "</p>" if flash[:notice]%>


	</div>
	<br />
<br />
<%= link_to "Back to admin home", :controller => :site_prefs, :action => :index %>

</body>
</html>